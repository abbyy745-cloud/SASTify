{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (FastAPI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/Backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Backend"
            },
            "justMyCode": true
        },
        {
            "name": "Frontend (Vite)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/Frontend/web-dashboard",
            "console": "integratedTerminal"
        },
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/Frontend/vscode-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/Frontend/vscode-extension/out/**/*.js"
            ],
            "preLaunchTask": "npm: compile"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Backend + Frontend)",
            "configurations": [
                "Backend (FastAPI)",
                "Frontend (Vite)"
            ]
        }
    ]
}